#!/usr/bin/env bash
#
# Filename: udbm-config
#
# $Id: udbm-config.in,v 1.4 2005/09/15 14:24:16 adavid Exp $

prefix=/usr/local
inc=-I${prefix}/uppaal/include
lib=-L${prefix}/uppaal/lib

usage()
{
    cat <<EOF
Usage: udbm-config [OPTION]

Known values for OPTION are:

  --version       print version information
  --libs          print library linking information
  --inc           print include path
  --cflags        print pre-processor and compiler flags
  --dir           print the installation directory

EOF

    exit 1
}

if [ -z "$1" ]; then
    usage
fi

while [ ! -z "$1" ]; do
    case "$1" in
    -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
    *) optarg= ;;
    esac

    case "$1" in

    --version)
    echo "2.0.8"
    ;;

    --libs)
    echo $lib -ludbm
    ;;

    --inc)
    echo $inc
    ;;

    --cflags)
    echo -Wall -DNDEBUG -O3 -ffloat-store -fgcse-las -fgcse-lm -fgcse-sm -ftree-loop-linear -funswitch-loops -ftree-loop-im -fivopts -ftree-vectorize -ftracer -msse2 -fPIC -march=native -DENABLE_64BIT    -DBOOST_DISABLE_THREADS
    ;;

    --dir)
    echo ${prefix}/uppaal
    ;;

    *)
    usage
    ;;

    esac
    shift
done
